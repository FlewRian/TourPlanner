<Page x:Class="TourPlanner.Views.SearchWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourPlanner.Views"
      xmlns:viewModel="clr-namespace:TourPlanner.Factory.ViewModel" xmlns:viewmodels="clr-namespace:TourPlanner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:SearchViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchWindow"
      viewModel:ViewModelCreator.FactoryType="{x:Type viewModel:SearchViewModelFactory}">

    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"  Content="Reset" Margin="5" Command="{Binding ClearCommand}"/>
        <Button Grid.Column="1"  Content="Search" Margin="5" Command="{Binding SearchCommand}"/>
        <TextBox Grid.Column="2" Margin="10 5 10 5" Name="txtSearchName" Text="{Binding SearchName, Mode=TwoWay}"/>
    </Grid>
</Page>
